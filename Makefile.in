	$(RM) $(PREFIX)$(DEVEL_PREFIX)include/sys/timeb.h
endif
ifneq ($(UCLIBC_HAS_EPOLL),y)
	# Remove epoll.h since epoll_*() were disabled upon request
	$(RM) $(PREFIX)$(DEVEL_PREFIX)include/sys/epoll.h
endif
ifneq ($(UCLIBC_HAS_XATTR),y)
